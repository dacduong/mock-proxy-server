{
  "POST /api/login": {
    "scenarios": [
      {
        "name": "Admin Login",
        "actionType": "mock",
        "filters": [
          {
            "type": "body",
            "field": "username",
            "operator": "equals",
            "value": "admin"
          }
        ],
        "response": {
          "statusCode": 200,
          "headers": {
            "Content-Type": "application/json"
          },
          "bodyType": "json",
          "body": {
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
            "user": {
              "id": 1,
              "username": "admin",
              "role": "administrator",
              "permissions": [
                "read",
                "write",
                "delete"
              ]
            }
          }
        }
      },
      {
        "name": "Invalid Credentials",
        "actionType": "mock",
        "filters": [
          {
            "type": "body",
            "field": "",
            "operator": "contains",
            "value": "wrongpassword"
          }
        ],
        "response": {
          "statusCode": 401,
          "headers": {
            "Content-Type": "application/json"
          },
          "bodyType": "json",
          "body": {
            "error": "Invalid credentials"
          }
        }
      }
    ],
    "defaultBehavior": "first",
    "logicOperator": "and"
  }
}